<section class="profile">
  <div class="profile_self_image">
    <% if @user.user_image.attached? %>
      <%= image_tag @user.user_image, class: 'img-thumbnail', alt: 'プロフィール写真' %>
    <% else %>
      <%= image_tag 'default.png', alt: 'プロフィール写真' %>
    <% end %>
  </div>
  <div class="profile_info">
    <div class="profile_info_details">
      <p class="common_size20 sp_320_font_size">名前：<%= @user&.name %></p>
    </div>
    <div class="profile_info_details">
      <div class="profile_grade <%= get_title_color @user %>">
        <i class="fa-solid fa-address-card"></i>
        <p class="<%= get_title_color @user %>_font_size"><%= @user&.grade&.grade_name %></p>
      </div>
      <p class="common_size16 sp_320_font_size">契約日時：<%= @user&.created_at.strftime("%Y/%m/%d") %></p>
    </div>
    <%# <div class="sales_batch"> %>
      <%#= image_tag 'business.svg', alt: '営業する人のアイコン' %>
    <%# </div> %>
  </div>
</section>
<%= link_to new_task_path, class: "uranai_link" do %>
  <div class="uranai">
    <div class="uranai_icon">
      <%= image_tag 'cil_badge.svg', alt: '課題提出のアイコン' %>
    </div>
    <p class="common_size16">課題提出</p>
  </div>
<% end %>
