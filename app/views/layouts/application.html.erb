<!DOCTYPE html>
<html>
  <head>
    <title>ShineStnApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= javascript_importmap_tags %>
    <%= yield(:js) %>
  </head>

  <body>
    <% if get_current_path.include?("login") %>
      <%= yield %>
    <% else %>
      <%= render 'layouts/header' %>
      <main>
        <div class="container">
          <%= yield %>
        </div>
      </main>
      <%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
