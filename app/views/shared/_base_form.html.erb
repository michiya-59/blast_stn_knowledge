<div class="step_container">
  <div class="rectangle_triangle_container">
    <div class="rectangle">
      <div class="rectangle-content common_size20">STEP1 入力</div>
    </div>
    <div class="triangle"></div>
  </div>

  <div class="rectangle_triangle_container">
    <div class="step_white rectangle">
      <div class="rectangle-content common_size20 beige">STEP2 入力確認</div>
    </div>
    <div class="triangle_white triangle"></div>
  </div>

  <div class="rectangle_triangle_container">
    <div class="step_white rectangle">
      <div class="rectangle-content common_size20 beige">STEP3 完了</div>
    </div>
  </div>

</div>
<div class="input_order">
  <div class="basic_info">
    <p class="common_btn_beige_background">1</p>
    <p class="common_size13">基本情報<br>入力</p>
  </div>
  <div class="address_info">
    <p class="common_btn_gray_background">2</p>
    <p class="common_size13">住所情報<br>入力</p>
  </div>
  <div class="bank_info">
    <p class="common_btn_gray_background">3</p>
    <p class="common_size13">銀行口座<br>入力</p>
  </div>
  <div class="contract">
    <p class="common_btn_gray_background">4</p>
    <p class="common_size13">契約情報<br>入力</p>
  </div>
  <div class="input_order_line"></div>
</div>
<p class="form_edit_title common_size20">会員登録 基本情報</p>

<%= form_with model: @set_tmp_member_info, url: confirm_tmp_member_infos_path(current_step: @current_step), local: true do |f| %>
  <!-- エラーメッセージの表示 -->
  <%= render 'shared/error' %>

  <div class="common_list_title_background common_btn_shape">
    <!-- ログインID -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">ログインID</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :login_id, class: 'input_text_form', value: get_default_value("login_id", "text" , @set_tmp_member_info), required: true  %>
        <p>※半角英数字で入力してください。</p>
      </div>
    </div>

    <!-- パスワード -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">パスワード</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.password_field :password, class: 'input_text_form', required: true  %>
        <p>※8文字以上でそれぞれ一つ以上の小文字、大文字、特殊文字を含めてください。</p>
      </div>
    </div>

    <!-- パスワード確認 -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">パスワード確認</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.password_field :password_confirmation, class: 'input_text_form', required: true  %>
        <p>※8文字以上でそれぞれ一つ以上の小文字、大文字、特殊文字を含めてください。</p>
      </div>
    </div>

    <!-- 氏名 -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">氏名</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :name, class: 'input_text_form', value: get_default_value("name", "text" , @set_tmp_member_info), required: true  %>
      </div>
    </div>

    <!-- 氏名カナ -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">氏名カナ</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :name_kana, class: 'input_text_form', value: get_default_value("name_kana", "text" , @set_tmp_member_info), required: true  %>
      </div>
    </div>

    <!-- メールアドレス -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">メールアドレス</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.email_field :email, class: 'input_text_form', value: get_default_value("email", "text" , @set_tmp_member_info), required: true  %>
      </div>
    </div>

    <!-- 電話番号 -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">電話番号</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.telephone_field :phone, class: 'input_text_form', value: get_default_value("phone", "text" , @set_tmp_member_info), required: true  %>
        <p>※ハイフンを含めないで入力してください。</p>
      </div>
    </div>

    <!-- 誕生日 -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">誕生日</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <div class="form_select">
          <% f.object.birthday = get_default_birthday_value @set_tmp_member_info %>
          <%= f.date_select :birthday, use_month_numbers: true, start_year: 1970, end_year: Date.today.year%>
        </div>
      </div>
    </div>

    <!-- 性別 -->
    <div class="form_edit_part">
      <div class="form_part_title common_list_title">
        <p class="common_size16">性別</p>
        <span>必須</span>
      </div>
      <div class="form_part_input">
        <p class="gender_content">
          <%= f.radio_button :gender_id, 1, checked: (get_default_value("gender_id", "radio", @set_tmp_member_info) == 1) %> 男性
        </p>
        <p class="gender_content">
          <%= f.radio_button :gender_id, 0, checked: (get_default_value("gender_id", "radio", @set_tmp_member_info) == 0) %> 女性
        </p>
      </div>
    </div>

    <% if params["back_flg"].present? %>
      <%= f.hidden_field :back_flg, value: 1 %>
    <% end %>

    <% if @tmp_member_info_id.present? %>
      <%= f.hidden_field :id, value: @tmp_member_info_id %>
    <% end %>
  </div>
  <!-- 送信ボタン -->
  <div class="submit_btn common_merge">
    <%= f.submit "次へ", class: "common_btn_beige common_btn_content common_box_beige" %>
  </div>
<% end %>
