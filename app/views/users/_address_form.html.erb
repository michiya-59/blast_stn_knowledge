<p class="form_edit_title common_size20">会員登録 住所</p>

<%= form_with model: @user_info, url: user_path(@user_info), local: true do |f| %>
  <!-- エラーメッセージの表示 -->
  <%= render 'shared/error' %>

  <div class="common_list_title_background common_btn_shape">
    <div class="form_edit_part">
      <!-- 郵便番号 -->
      <div class="form_part_title common_list_title">
        <p class="common_size16">郵便番号</p><span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :zip_str3, class: "zip_three", maxlength: 3, value: @user_info&.zip_str3 %>　ー　<%= f.text_field :zip_str4, class: "zip_four", maxlength: 4, value: @user_info&.zip_str4 %>
        <p>※半角英数字で入力してください。</p>
      </div>
    </div>

    <div class="form_edit_part">
      <!-- 都道府県 -->
      <div class="form_part_title common_list_title">
        <p class="common_size16">都道府県</p><span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :ken, class: "input_text_form", value: @user_info&.ken %>
      </div>
    </div>

    <div class="form_edit_part">
      <!-- 市区町村番地 -->
      <div class="form_part_title common_list_title">
        <p class="common_size16">市区町村番地</p><span>必須</span>
      </div>
      <div class="form_part_input">
        <%= f.text_field :city, class: "input_text_form", value: @user_info&.city%>
      </div>
    </div>

    <div class="form_edit_part">
      <!-- 建物名・部屋番号 -->
      <div class="form_part_title common_list_title">
        <p class="common_size16">建物名・部屋番号</p>
      </div>
      <div class="form_part_input">
        <%= f.text_field :other_address, class: "input_text_form", value: @user_info&.other_address %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :type, value: params[:type] %>

  <!-- 送信ボタン -->
  <div class="submit_btn common_merge">
    <%= link_to '戻る', user_path(@user_info), class: 'common_btn_beige common_btn_content common_box_beige' %>
    <%= f.submit "更新する", class: "common_btn_beige common_btn_content common_box_beige" %>
  </div>
<% end %>

