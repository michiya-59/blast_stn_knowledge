<% if @approval.size > 15 %>
  <div class="pagination" style="margin-top:1.5rem;">
    <%# 最初のページへのリンク %>
    <%= link_to '<<', url_for(page: 1, search_year: @search_year, search_month: @search_month, type: @type, id: params[:id]), class: "common_box_beige common_size13 padding05" unless @approval_lists.first_page? %>

    <%# 前のページへのリンク %>
    <%= link_to '<', url_for(page: @approval_lists.prev_page, search_year: @search_year, search_month: @search_month, type: @type, id: params[:id]), class: "common_box_beige common_size13 padding05" if @approval_lists.prev_page %>

    <%# 中央のページリンク（最大5ページ） %>
    <% start_page = [@approval_lists.current_page - 2, 1].max %>
    <% end_page = [@approval_lists.current_page + 2, @approval_lists.total_pages].min %>

    <% start_page.upto(end_page) do |page| %>
      <% if page == @approval_lists.current_page %>
        <span class="common_btn_beige_background common_size13 padding05"><%= page %></span>
      <% else %>
        <%= link_to page, url_for(page: page, search_year: @search_year, search_month: @search_month, type: @type, id: params[:id]), class: "common_box_beige common_size13 padding05" %>
      <% end %>
    <% end %>

    <%# 次のページへのリンク %>
    <%= link_to '>', url_for(page: @approval_lists.next_page, search_year: @search_year, search_month: @search_month, type: @type, id: params[:id]), class: "common_box_beige common_size13 padding05" if @approval_lists.next_page %>

    <%# 最後のページへのリンク %>
    <%= link_to '>>', url_for(page: @approval_lists.total_pages, search_year: @search_year, search_month: @search_month, type: @type, id: params[:id]), class: "common_box_beige common_size13 padding05" unless @approval_lists.last_page? %>
  </div>
<% end %>
