<% content_for :js do %>
  <%= javascript_import_module_tag "controllers/select2" %>
<% end %>

<p class="pankuzu">
  <%= link_to 'トップページ', root_path, class: 'common_a' %> >
  <%= link_to '課題提出の確認一覧', new_task_path(type: params[:type]), class: 'common_a' %> >
  課題提出の確認 メンバー一覧
</p>
<div class="admin_seminar_content">
  <div class="common_field_title">
    <h1><%= @learn.name %><br>課題提出の確認 メンバー一覧</h1>
    <div class="underline"></div>
  </div>

  <%= form_with url: confirm_tasks_path, local: true, method: :get, class: "cap_adjust_ments_search" do |form| %>
    <%= form.select :id, options_for_select(@user_all.map { |user| [user.name, user.id] }, selected: @selected_user_id), {}, { id: 'select2' } %>
    <%= select_tag :approved, options_for_select([['未承認', false], ['承認済み', true]]), class: "mt-1" %><br>
    <%= form.hidden_field :learn_id, value: params[:learn_id] %>
    <%= form.hidden_field :type, value: params[:type] %>
    <%= form.submit "検索", class: "search_btn common_box_beige mt-1" %>
  <% end %>

  <div class="common_admin_list">
    <div class="common_list_head">
      <p class="w6"></p>
      <p class="w41 common_size16">氏名</p>
    </div>
    <% if @tasks.present? %>
      <div class="common_list_body mt-2">
        <% @tasks.each_with_index do |task, index| %>
          <div class="common_list_body_part">
            <p class="w6 common_size16"><%= index + 1 %>.</p>
            <p class="w41 common_size16"><%= task.user&.name %></p>
            <%= link_to '課題提出内容詳細', member_detail_task_path(task, type: params[:type], admin: true), class: 'confirm_btn common_box_beige' %>
          </div>
        <% end %>
      </div>
    <% elsif @task.present? %>
      <div class="common_list_body mt-2">
        <div class="common_list_body_part">
          <p class="w6 common_size16">1.</p>
          <p class="w41 common_size16"><%= @task.user&.name %></p>
          <%= link_to '課題提出内容詳細', member_detail_task_path(@task, type: params[:type], admin: true), class: 'confirm_btn common_box_beige' %>
        </div>
      </div>
    <% else %>
      <p class="fz-2 mt-1">提出された課題はありません。</p>
    <% end %>
  </div>
</div>
<%= link_to '戻る', new_task_path(type: params[:type]), class: 'common_btn_beige common_btn_beige_background common_btn_content common_merge' %>

