<!DOCTYPE html>
<html>
  <head>
    <title>ShineStnApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <%= include_gon %>
    <%= javascript_importmap_tags %>
    <script src="https://cdn.jsdelivr.net/npm/orgchart@3.1.1/dist/js/orgchart.min.js"></script>
    <%= yield(:js) %>
  </head>

  <body>
    <% if get_current_path.include?("login") %>
      <%= yield %>
    <% else %>
      <%= render 'layouts/header' %>
      <main>
        <div class="container">
          <%= yield %>
        </div>
      </main>
      <%= render 'layouts/footer' %>
    <% end %>
  </body>
</html>
