<p class="pankuzu">
  <%= link_to 'トップページ', root_path, class: 'common_a' %>
  >
  <%= link_to 'ボーナス振り込会員一覧 ', bonus_pay_list_rewards_path, class: 'common_a' %>
  >
  <%= "#{@transfer_month_and_day}度 ボーナス振り込み情報" %>
</p>
<div class="top_background"></div>
<h2 class="top_title">ボーナス振り込み情報</h2>
<div class="bonus_container common_btn_shape">
  <h2 class="mt-2"><b><%= @target_user.name %></b>さんのボーナス振り込み情報</h2>

  <div class="common_list_title_background mt-2 mb-1">
    <div class="bank_information_title common_list_title common_size20">
      <p>振込口座情報</p>
    </div>
    <div class="address_information">
      <div class="common_list_part common_size16">
        <p>預金種別</p>
        <p>
        <% case @user_bank.account_type.to_i %>
        <% when 1 %>
          普通預金
        <% when 2 %>
          当座預金
        <% when 3 %>
          定期預金
        <% else %>
          未定義
        <% end %>
      </p>
      </div>
      <div class="common_list_part common_size16">
        <p>金融機関名</p>
        <p><%= @user_bank&.bank_name %></p>
      </div>
      <div class="common_list_part common_size16">
        <p>支店名</p>
        <p><%= @user_bank&.branch_name %></p>
      </div>
      <div class="common_list_part common_size16">
        <p>支店番号</p>
        <p><%= @user_bank&.branch_number %></p>
      </div>
      <div class="common_list_part common_size16">
        <p>口座番号</p>
        <% if current_user&.admin_flg == 1%>
          <p><%= @user_bank&.account_number_hash %></p>
        <% else %>
          <p><%= @user_bank&.account_number_tail %></p>
        <% end %>
      </div>
      <div class="common_list_part common_size16">
        <p>口座名義</p>
        <p><%= @user_bank&.account_holder %></p>
      </div>
    </div>
  </div>

  <div class="bonus_list">
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">対象日</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18"><%= "#{@transfer_month_and_day}度"%></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">直紹介ボーナス</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @reward_bonus_total %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">２ティアボーナス</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @two_tier_bonus_total %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">タイトルボーナス</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @title_bonus_total %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">aさんボーナス</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @a_san_bonus_total %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">源泉徴収</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <% if @certificate_of_tax_deducted_price_final.present? %>
          <p class="common_size18">¥ <%= @certificate_of_tax_deducted_price_final %></p>
        <% else %>
          <p class="common_size18">¥ <%= return_deduction_price @total_payment_price, @certificate_of_tax_deducted_price %></p>
        <% end %>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">事務手数料</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= return_deduction_price @total_payment_price, 500 %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">キャップ調整金</p>
        <div class="triangle">
          <%= image_tag 'triangle.svg', alt: '' %>
        </div>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @cap_adjustment_money.present? ? "#{@cap_adjustment_money}" : 0 %></p>
      </div>
    </div>
    <div class="bonus_part">
      <div class="bonus_title">
        <p class="common_size18">総支払額</p>
      </div>
      <div class="bonus_data">
        <p class="common_size18">¥ <%= @total_payment_price > 0 ? @total_payment_price : 0 %></p>
      </div>
    </div>
  </div>
</div>
<%= link_to '戻る', bonus_pay_list_rewards_path, class: 'common_btn_beige common_btn_beige_background common_btn_content common_merge' %>